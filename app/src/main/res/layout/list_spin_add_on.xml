<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#a2f4ecec"
    android:padding="@dimen/default_padding_margin">

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_pre_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#807171"
        android:visibility="visible"
        android:text="เพิ่ม "
        android:textSize="@dimen/text_add_on_very_small" />

    <TextView
        android:id="@+id/tv_add_on_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#807171"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="###"
        android:textSize="@dimen/text_add_on_very_small" />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
<LinearLayout
    android:id="@+id/container_price"
    android:visibility="visible"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        style="@style/BeerTextView.Black.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+" />

    <TextView
        android:id="@+id/tv_add_on_price"
        style="@style/BeerTextView.Black.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="##.00" />

    <TextView
        style="@style/BeerTextView.Black.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="฿" />
</LinearLayout>


    <!--<android.support.v7.widget.AppCompatImageButton-->
