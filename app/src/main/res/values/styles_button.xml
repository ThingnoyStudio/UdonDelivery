<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginButton">
        <!--<item name="android:stateListAnimator">@null</item>-->
        <item name="android:textSize">@dimen/text_body_2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginButton.Register">
        <item name="android:background">@drawable/btn_active_border_selector</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@drawable/btn_inactive_text_color_selector</item>
    </style>

    <style name="LoginButton.SignIn">
        <item name="android:background">@drawable/btn_active_selector</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BeerButton">
        <!--<item name="android:stateListAnimator">@null</item>-->
        <item name="android:textSize">@dimen/text_body_2</item>
    </style>

    <style name="BeerButton.Active">
        <item name="android:background">@drawable/btn_active_selector</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BeerButton.Active.Boarder">
        <item name="android:background">@drawable/btn_active_border_selector</item>
        <item name="android:paddingEnd">@dimen/default_padding_margin_large</item>
        <item name="android:paddingStart">@dimen/default_padding_margin_large</item>
        <item name="android:textColor">@drawable/btn_inactive_text_color_selector</item>
    </style>

    <style name="Button.White.Primary" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Button.White.TextNormal" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <style name="Button.White.TextPrimary" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Button.White.TextSecondary" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="spinner_style">
        <item name="android:spinnerMode">dialog</item>
    </style>

</resources>